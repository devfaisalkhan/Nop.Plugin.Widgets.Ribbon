@model Nop.Plugin.Widgets.Ribbon.Models.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}

@await Component.InvokeAsync("StoreScopeConfiguration")
    <form asp-controller="WidgetsRibbon" asp-action="Configure" method="post">
        <div class="panel-group">
            <div class="panel panel-default">
                <div class="panel-body">
                    @*@T("Plugins.Widgets.GoogleAnalytics.Instructions")*@
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-override-store-checkbox asp-for="EnableNew_OverrideForStore" asp-input="EnableNew" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />

                            <nop-label asp-for="EnableNew" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="EnableNew" />
                            <span asp-validation-for="EnableNew"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-override-store-checkbox asp-for="EnableFeatured_OverrideForStore" asp-input="EnableFeatured" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />

                            <nop-label asp-for="EnableFeatured" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="EnableFeatured" />
                            <span asp-validation-for="EnableFeatured"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-override-store-checkbox asp-for="Color_OverrideForStore" asp-input="Color" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />

                            <nop-label asp-for="Color" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="Color" />
                            <span asp-validation-for="Color"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <nop-override-store-checkbox asp-for="BackgroundColor_OverrideForStore" asp-input="BackgroundColor" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />

                            <nop-label asp-for="BackgroundColor" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="BackgroundColor" />
                            <span asp-validation-for="BackgroundColor"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            &nbsp;
                        </div>
                        <div class="col-md-9">
                            <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>